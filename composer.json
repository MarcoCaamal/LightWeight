{
    "name": "marco/lightweight",
    "description": "Simple PHP Framework",
    "type": "library",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "LightWeight\\": "src"
        },        "files": [
            "src/Helpers/app.php",
            "src/Helpers/string.php",
            "src/Helpers/http.php",
            "src/Helpers/session.php",
            "src/Helpers/auth.php",
            "src/Helpers/class.php",
            "src/Helpers/events.php",
            "src/Helpers/mail.php",
            "src/Helpers/logger.php",
            "src/Helpers/route.php"
        ]
    },
    "scripts": {
        "tests": "./vendor/bin/pest ./tests",
        "php-cs-fixer": "php-cs-fixer fix . --diff"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "MarcoCaamal",
            "email": "caamalmarco99@gmail.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "pestphp/pest": "^2.36"
    },
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "php-di/php-di": "^7.0",
        "symfony/console": "^6.4",
        "adhocore/jwt": "^1.1",
        "phpmailer/phpmailer": "^6.10",
        "monolog/monolog": "^3.9"
    },
    "bin": [
        "light"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
